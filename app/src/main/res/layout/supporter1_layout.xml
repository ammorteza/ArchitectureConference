<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f5f5f5">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="2dp"
        android:layout_alignParentRight="true"
        android:background="#009688"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="#7986cb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/supportersMirasLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:text="استان همدان"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:text="اداره کل میراث فرهنگی, صنایع دستی و گردشگری"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginRight="115dp"
            android:layout_alignParentLeft="true"
            card_view:cardElevation="0dp"
            card_view:cardCornerRadius="2dp"
            android:layout_alignParentRight="true"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="#3f51b5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/supportersostandariLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:text="استانداری همدان"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:text="وزارت کشور"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="220dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="2dp"
                android:layout_alignParentRight="true"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardBackgroundColor="#303f9f">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/shahrdariLogo"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:text="شهرداری همدان"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="10dp"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="2dp"
                android:layout_alignParentRight="true"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardBackgroundColor="#1a237e">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/nezamLogo"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:text="سازمان نظام مهندسی"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:text="استان همدان"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>